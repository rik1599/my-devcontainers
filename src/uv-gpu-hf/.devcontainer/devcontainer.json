{
	"name": "Digis Cluster Python",
	// Or use a Dockerfile or Docker Compose file. More info: https://containers.dev/guide/dockerfile

	"build": {
		"context": "..",
		"dockerfile": "Dockerfile"
	},

	"containerEnv": {
		"UV_LINK_MODE": "copy",
		"NVIDIA_VISIBLE_DEVICES": "${templateOption:gpu}",
		"HF_HOME": "/huggingface"
	},

	"runArgs": [
        "--name", "${templateOption:projectname}-rbelliato-modis-${templateOption:gpu}", "--runtime", "nvidia"
	],

	"mounts": [
		{"source": "${localEnv:HOME}/hf_cache", "target": "/huggingface", "type": "bind"}
	],

	"customizations": {
		"vscode": {
			"extensions": [
				"ms-python.python",
				"ms-python.isort",
				"ms-python.autopep8",
				"ms-python.vscode-pylance",
				"ms-toolsai.jupyter"
			],

			"settings": {
				"[python]": {
      				"editor.defaultFormatter": "ms-python.autopep8"
    			}
			}
		}
	}

	// Features to add to the dev container. More info: https://containers.dev/features.
	// "features": {},

	// Use 'forwardPorts' to make a list of ports inside the container available locally.
	// "forwardPorts": [],

	// Use 'postCreateCommand' to run commands after the container is created.
	// "postCreateCommand": "pip3 install --user -r requirements.txt",

	// Configure tool-specific properties.
	// "customizations": {},

	// Uncomment to connect as root instead. More info: https://aka.ms/dev-containers-non-root.
	// "remoteUser": "root"
}
